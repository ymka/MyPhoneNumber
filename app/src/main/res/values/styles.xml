<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PhoneText">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/phoneText</item>
    </style>

    <style name="WidgetButtonParent">
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="WidgetButton" parent="WidgetButtonParent">
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="RequestText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="RequestPermissionText" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/selector_request_permission</item>
        <item name="android:textSize">@dimen/request_permissions_text</item>
    </style>

</resources>
